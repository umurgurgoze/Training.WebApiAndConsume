@model Training.ConsumeAPI.ResponseModels.ProductResponseModel
<html>
<head>
    <title>Yeni Ürün Ekle</title>
</head>
<body>
    @{
        if (TempData["errorMessage"] != null)
        {
            <p style="color:red">
                @TempData["errorMessage"]?.ToString()
            </p>
        }

    }
    <form asp-action="Create" asp-controller="Home" method="post">
        <label>Ürün Adı:</label>
        <input type="text" asp-for="@Model.Name" />
        <br />
        <hr />
        <label>Ürün Fiyatı:</label>
        <input type="text" asp-for="@Model.Price" />
        <br />
        <hr />
        <label>Ürün Stok Miktarı:</label>
        <input type="text" asp-for="@Model.Stock" />
        <br />
        <hr />

        <div>
            <a asp-action="Index" asp-controller="Home">Geri Dön</a>
            <button type="submit">Gönder</button>
        </div>

    </form>
</body>
</html>